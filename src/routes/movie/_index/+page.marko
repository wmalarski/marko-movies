import { getMovies, getRandomMedia } from "../../../services/tmdb";
import { getListItem } from "../../../utils/format";
import { paths } from "../../../utils/paths";

<div class="flex max-h-screen flex-col gap-4 overflow-y-scroll">
  $ const popular = getMovies({
    context: $global.tmdb,
    page: 1,
    query: "popular",
  });

  <await(popular)>
    <@then|popular|>
      $ const random = getRandomMedia({ collections: [popular] });
      <a href=paths.media("movie", random.id)>
        <movie-hero media=random/>
      </a>
    </@then>
  </await>
  <media-carousel
    collection=popular
    title=getListItem({ query: "popular", type: "movie" })
    viewAllHref=paths.movieCategory("popular")
    clientReorder
  />
  $ const topRated = getMovies({
    context: $global.tmdb,
    page: 1,
    query: "top_rated",
  });
  <media-carousel
    collection=topRated
    title=getListItem({ query: "top_rated", type: "movie" })
    viewAllHref=paths.movieCategory("top_rated")
    clientReorder
  />
  $ const nowPlaying = getMovies({
    context: $global.tmdb,
    page: 1,
    query: "now_playing",
  });
  <media-carousel
    collection=nowPlaying
    title=getListItem({ query: "now_playing", type: "movie" })
    viewAllHref=paths.movieCategory("now_playing")
    clientReorder
  />

  <page-footer/>
</div>
