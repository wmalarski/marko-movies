<const/loadMore=(
  async (page: number) => {
    const params = new URLSearchParams({ page: String(page) });
    const url = `/genre/${$global.params.genreId}/movie/data?${params}`;
    const response = await fetch(url);
    return response.json();
  }
)/>

<infinite-media-grid
  collection=$global.collection
  name=`Movie Genre: ${$global.genre.name}`
  loadMore=loadMore
/>
